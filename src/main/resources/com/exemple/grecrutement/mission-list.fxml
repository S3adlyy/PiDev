<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.exemple.grecrutement.MissionListController"
      spacing="25"
      alignment="TOP_CENTER"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

    <!-- TITLE -->
    <Label text="ðŸ“‹ Mission List"
           style="-fx-text-fill: #333333; -fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- TABLE -->
    <TableView fx:id="missionTable"
               prefWidth="900"
               style="-fx-background-color: white;
                      -fx-text-fill: black;
                      -fx-control-inner-background: white;
                      -fx-border-color: #ddd;
                      -fx-border-radius: 8;
                      -fx-background-radius: 8;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

        <!-- Column Headers -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <columns>
            <TableColumn fx:id="idColumn" text="ID"
                         prefWidth="80"
                         style="-fx-text-fill: white;
                                -fx-font-weight: bold;
                                -fx-background-color: #4CAF50;"/>

            <TableColumn fx:id="descriptionColumn" text="Description"
                         prefWidth="420"
                         style="-fx-text-fill: white;
                                -fx-font-weight: bold;
                                -fx-background-color: #4CAF50;"/>

            <TableColumn fx:id="scoreColumn" text="Min Score"
                         prefWidth="120"
                         style="-fx-text-fill: white;
                                -fx-font-weight: bold;
                                -fx-background-color: #4CAF50;"/>

            <TableColumn fx:id="creatorColumn" text="Creator ID"
                         prefWidth="120"
                         style="-fx-text-fill: white;
                                -fx-font-weight: bold;
                                -fx-background-color: #4CAF50;"/>
        </columns>
    </TableView>

    <!-- ACTION BUTTONS -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="âœï¸ Edit"
                onAction="#editMission"
                style="-fx-background-color: #4CAF50;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 14px;
                       -fx-padding: 10 25;
                       -fx-background-radius: 5;
                       -fx-cursor: hand;"/>

        <Button text="ðŸ—‘ï¸ Delete"
                onAction="#deleteMission"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #f44336;
                       -fx-font-weight: bold;
                       -fx-font-size: 14px;
                       -fx-padding: 9 24;
                       -fx-border-color: #f44336;
                       -fx-border-width: 2;
                       -fx-border-radius: 5;
                       -fx-cursor: hand;"/>
    </HBox>
</VBox>