<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.guser.controllers.WorkspaceController"
      stylesheets="@workspace.css"
      spacing="10">

    <VBox styleClass="prf-card wsp-card" spacing="10">

        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="prf-cardHeader">
            <Label text="Workspace" styleClass="prf-cardTitle"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="newTrackBtn" text="New Track" onAction="#onNewTrack"
                    styleClass="prf-outlineBtn"/>
        </HBox>

        <!-- Track list (always present) -->
        <VBox fx:id="tracksListPane" spacing="10">
            <ListView fx:id="tracksListView" styleClass="wsp-list"/>
        </VBox>

        <!-- Track detail include (hidden by controller until a track is opened) -->
        <fx:include fx:id="trackSection" source="track.fxml"/>

        <Label fx:id="workspaceErrorLabel" text="" styleClass="prf-error" visible="false" managed="false"/>
    </VBox>
</VBox>
