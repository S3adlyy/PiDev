<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.guser.controllers.AppNavController"
      styleClass="navBar" spacing="10" alignment="CENTER_LEFT">

    <Button fx:id="backBtn" text="â†" onAction="#onBack" styleClass="navIconBtn"/>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Region styleClass="navBrandDot"/>
        <Label text="Carrieri" styleClass="navBrand"/>
    </HBox>

    <TextField fx:id="searchField" promptText="Search people, skills..." styleClass="navSearch"/>

    <HBox spacing="6" alignment="CENTER" styleClass="navLinks">
        <Button fx:id="profileBtn" text="Profile" onAction="#onProfile" styleClass="navLinkBtn"/>
        <Button fx:id="peopleBtn" text="People" onAction="#onPeople" styleClass="navLinkBtn"/>
        <Button fx:id="jobsBtn" text="Jobs" onAction="#onJobs" styleClass="navLinkBtn" disable="true"/>
    </HBox>

    <Region HBox.hgrow="ALWAYS"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Circle fx:id="navAvatar" radius="14" styleClass="navAvatar"/>
        <Label fx:id="navNameLabel" text="User" styleClass="navName"/>
        <Button fx:id="logoutBtn" text="Logout" onAction="#onLogout" styleClass="navLogoutBtn"/>
    </HBox>
</HBox>
